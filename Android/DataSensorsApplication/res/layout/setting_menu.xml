<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollSetting"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/dalnomerCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:text="ДАЛЬНОМЕР"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/design_default_color_background" />

        <Button
            android:id="@+id/sizePhotoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fadingEdge="horizontal"
            android:gravity="left|center_vertical"
            android:text="Размер фото"
            android:textColor="@color/design_default_color_background" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/nameDeviceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Обозначение устройства"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/localSystemButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Местная система"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/stepTrackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Шаг трека"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/countDataSensorsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Усреднение"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/viewPhotosButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Просмотр"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/pointButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Точка"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/sessionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Сессия"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/objectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Объект"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/startTrackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="Трек"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>